<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<TextView android:id="@+id/welcometxt" android:layout_width="fill_parent"
		android:paddingTop="5dp" android:height="40dp" android:textSize="20sp"
		android:textStyle="bold" android:textColor="#FFCC00" android:gravity="center_horizontal"
		android:layout_height="wrap_content" />
	<GridView android:id="@+id/gridview" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:columnWidth="110dp"
		android:numColumns="5" android:verticalSpacing="7dp"
		android:horizontalSpacing="20dp" android:stretchMode="columnWidth"
		android:gravity="center" />
	
</LinearLayout>		